#!/usr/bin/env node
"use strict";

let path = require("path");
let chalk = require("chalk");
let { start, build } = require("../src/index.js");

let args = process.argv.slice(2)
let command = args[0]
let entry = args[1]

console.log(chalk.blue("ReScript Pages"))

function help() {
  console.log("")
  console.log("Available commands:")
  console.log("  - " + chalk.green("start") + " " + chalk.magenta("./MyEntry.bs.js") + ": starts a dev server")
  console.log("  - " + chalk.green("build") + " " + chalk.magenta("./MyEntry.bs.js") + ": builds the project")
}

switch (command) {
  case "start":
    if (typeof entry == "string") {
      start(path.join(process.cwd(), entry))
    } else {
      help()
    }
    break
  case "build":
    if (typeof entry == "string") {
      build(path.join(process.cwd(), entry))
    } else {
      help()
    }
    break
  case "help":
  default:
    help()
    break
}
